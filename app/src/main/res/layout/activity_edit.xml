<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/titleBar_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="@string/edit_activity"
        titlebar:centerTextColor="@color/colorAccent"
        titlebar:centerTextSize="14sp"
        titlebar:centerType="textView"
        titlebar:fillStatusBar="true"
        titlebar:leftImageResource="@drawable/ic_close"
        titlebar:leftType="imageButton"
        titlebar:rightImageResource="@drawable/ic_save"
        titlebar:rightType="imageButton"
        titlebar:showBottomLine="true"
        titlebar:statusBarColor="@color/colorPrimary"
        titlebar:statusBarMode="dark"
        titlebar:titleBarColor="@color/colorPrimary"
        titlebar:titleBarHeight="48dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/layout_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/image_button_redo"
                style="@style/FloatButton"
                android:background="@drawable/bg_left_float_button"
                android:paddingLeft="14dp"
                android:src="@drawable/ic_redo" />

            <View
                android:layout_width="1dp"
                android:layout_height="38dp"
                android:background="@color/colorEditBackground" />

            <ImageButton
                android:id="@+id/image_button_undo"
                style="@style/FloatButton"
                android:background="@drawable/bg_right_float_button"
                android:paddingRight="14dp"
                android:src="@drawable/ic_undo" />


        </LinearLayout>

    </FrameLayout>

</LinearLayout>