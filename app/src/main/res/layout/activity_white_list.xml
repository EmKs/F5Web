<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/titleBar_white_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_recycler_view_item"
        titlebar:centerSearchRightType="delete"
        titlebar:centerType="searchView"
        titlebar:fillStatusBar="true"
        titlebar:leftImageResource="@drawable/ic_back"
        titlebar:leftType="imageButton"
        titlebar:showBottomLine="true"
        titlebar:statusBarColor="@color/colorPrimary"
        titlebar:statusBarMode="dark"
        titlebar:titleBarColor="@color/colorPrimary"
        titlebar:titleBarHeight="48dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_white_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>